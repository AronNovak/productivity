<?php
/**
 * @file
 * Module to demonstrate the Productivity_Title profile.
 */


/**
 * Group name for the migration classes.
 */
define('SKELETON_DEMO_MIGRATION_GROUP', 'skeleton:demo');


/**
 * Dummy function so we can use this in tests.
 *
 * @return string
 *   Returns hard coded string "Hello world!".
 */
function productivity_migrate_hello_world() {
  return 'Hello world!';
}

/**
 * Implements hook_migrate_api().
 */
function productivity_migrate_migrate_api() {
  $classes = array(
    'ProductivityMigrateProject',
    'ProductivityMigrateAccount',
  );

  $migrations = array();
  foreach ($classes as $class_name) {
    $migrations[$class_name] = array(
      'class_name' => $class_name,
      'group_name' => SKELETON_DEMO_MIGRATION_GROUP,
    );
  }

  $api = array(
    'api'        => 2,
    'groups'     => array(
      SKELETON_DEMO_MIGRATION_GROUP => array(
        'title' => t('Demo content'),
      ),
    ),
    'migrations' => $migrations,
  );

  return $api;
}
